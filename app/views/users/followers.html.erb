<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <p><%= link_to "show", @user %> | 
    <%= link_to "followings", followings_user_path(@user) %> | 
    <%= link_to "followers", followers_user_path(@user) %></p>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    
    <h3>Followers</h3>
    <% @users.each do |user| %>
      <%= link_to user.name, user %><br>
    <% end %>
    <%= paginate @users %>
  </div>
</div>